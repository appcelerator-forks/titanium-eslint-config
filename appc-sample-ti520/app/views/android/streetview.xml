<Alloy>
  <Window id="win" title="Google Street View Panorama">
    <ActionBar displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />

    <!-- Note the module-tag here and the position set in streetview.tss -->
    <StreetViewPanorama module="ti.map" id="streetView" />

    <View class="buttons">
      <Button title="panning" onClick="toggle" />
      <Button title="zoom" onClick="toggle" />
      <Button title="streetNames" onClick="toggle" />
      <Button title="userNavigation" onClick="toggle" />
    </View>

  </Window>
</Alloy>
