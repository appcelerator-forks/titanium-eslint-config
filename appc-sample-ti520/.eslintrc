{
  "extends": "airbnb-base/legacy",
  "env": {
    "node": true
  },
  "rules": {
    "new-cap": [2, { "capIsNewExceptions": [] }],
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [ 2, "single" ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "always" ],
    "no-empty": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "spaced-comment": 0,
    "consistent-return": 0,
    "comma-dangle": 0,  // not sure why airbnb turned this on. gross!
    "default-case": 0,
    "func-names": 0,
    "global-require": 0,
    "max-len": 0,
    "no-alert": 0,
    "no-console": 0,
    "no-tabs": 0,
    "no-unused-vars": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 0,
    "no-use-before-define": 0,
    "no-plusplus": 0,
    "padded-blocks": 0,
    "prefer-template": 0,
    "prefer-arrow-callback": 0,
    "vars-on-top": 0,
    "wrap-iife": 0
  },
  "plugins": [
  ],
  "settings": {
  },
  "globals": {
    "Ti": true,
    "Titanium": true,
    "Alloy": true,
    "$": true,
    "Backbone": true,
    "OS_IOS": true,
    "OS_ANDROID": true,
    "_": true,
    "ENV_DEV": true,
    "ENV_TEST": true,
    "ENV_PROD": true,
    "DIST_ADHOC": true,
    "DIST_STORE": true,
    "L": true,
    "Widget": true,
    "WPATH": true,
    "App": true,
    "AvImageview": true,
    "TiImageCache": true,
    "Parse": true
  }
}
